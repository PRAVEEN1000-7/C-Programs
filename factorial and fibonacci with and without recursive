// fibonacci series with and without recursive
#include <stdio.h>

int main()
{
    int num,n=0,m=1,l;
    printf("Enter the limit : ");
    scanf("%d",&num);
    for(int i=0;i<num;i++)
    {
        if(i<=1)
        {
            printf("%d ",i);
        }
        else
        {
        
         l=n+m;
         n=m;
         m=l;
        printf("%d ",l);  
        }
    }
}

---------------------------------------------------------------------------------------------------
#include <stdio.h>
int fibo(int x)
{
    if(x<=1)
    {
        return x;
    }
    else
    {
        return fibo(x-1)+fibo(x-2);
    }
}
int main()
{
    int num,n=0,m=1,l;
    printf("Enter the limit : ");
    scanf("%d",&num);
    for(int i=0;i<num;i++)
    {
        printf("%d ",fibo(i));
    }
}


-----------------------------------------------------------------------------------------

input and output for both codeing :
Enter the limit : 5
0 1 1 2 3 

-------------------------------------------------------------------------------------------
